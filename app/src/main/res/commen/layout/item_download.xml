<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_download_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/design_icon_size"
    android:layout_marginLeft="@dimen/little_margin"
    android:layout_marginRight="@dimen/little_margin"
    android:layout_marginBottom="@dimen/little_margin"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/touch_rise"
    app:cardBackgroundColor="?attr/root_color"
    app:cardCornerRadius="2dp"
    tools:ignore="UnusedAttribute">

    <ImageView
        android:id="@+id/item_download_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/design_about_app"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_download_title"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="@color/colorTextDark2nd"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_centerVertical="true"
            style="@style/title_text"
            tools:text="LET THE INSPIRATION BEGIN"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>