<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_following_content_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/root_color"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/touch_rise"
    tools:ignore="UnusedAttribute">

    <com.wangdaye.mysplash._common.ui.widget.freedomSizeView.FreedomImageView
        android:id="@+id/item_following_content_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:fiv_shadow_position="bottom"
        tools:background="@color/colorPrimary_dark" />

    <com.wangdaye.mysplash._common.ui.widget.LikeImageButton
        android:id="@+id/item_following_content_likeButton"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:padding="@dimen/little_margin"
        android:layout_marginRight="@dimen/little_margin"
        android:layout_marginBottom="@dimen/little_margin"
        android:background="@android:color/transparent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_alignBottom="@+id/item_following_content_image"
        android:layout_alignParentRight="true"
        tools:src="@drawable/ic_item_heart_red"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageButton
        android:id="@+id/item_following_content_collectionButton"
        android:src="@drawable/ic_item_added"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:padding="@dimen/little_margin"
        android:layout_marginBottom="@dimen/little_margin"
        android:background="@android:color/transparent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_alignBottom="@+id/item_following_content_image"
        android:layout_toLeftOf="@id/item_following_content_likeButton"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageButton
        android:id="@+id/item_following_content_downloadButton"
        android:src="@drawable/ic_item_download"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:padding="@dimen/little_margin"
        android:layout_marginBottom="@dimen/little_margin"
        android:background="@android:color/transparent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_alignBottom="@+id/item_following_content_image"
        android:layout_toLeftOf="@id/item_following_content_collectionButton"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/item_following_content_title"
        android:textColor="@color/colorTextLight"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:shadowColor="@color/colorTextDark2nd"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/little_margin"
        android:layout_alignBottom="@+id/item_following_content_image"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/item_following_content_downloadButton"
        android:maxLines="1"
        style="@style/subtitle_text"
        tools:text="Alfredo Wong, 2016-7-21"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>