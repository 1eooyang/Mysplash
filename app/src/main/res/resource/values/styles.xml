<resources>

    <!-- activity & fragment themes. -->

    <!-- main activity. -->

    <style name="MysplashTheme_light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccent">@color/colorAccent_light</item>
        <item name="root_color">@color/colorRoot_light</item>
        <item name="line_color">@color/colorLine_light</item>
        <item name="title_color">@color/colorTextTitle_light</item>
        <item name="subtitle_color">@color/colorTextSubtitle_light</item>
        <item name="content_color">@color/colorTextContent_light</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:popupMenuStyle">@style/material_popup_menu</item>
    </style>

    <style name="MysplashTheme_dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorAccent_dark</item>
        <item name="root_color">@color/colorRoot_dark</item>
        <item name="line_color">@color/colorLine_dark</item>
        <item name="title_color">@color/colorTextTitle_dark</item>
        <item name="subtitle_color">@color/colorTextSubtitle_dark</item>
        <item name="content_color">@color/colorTextContent_dark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:popupMenuStyle">@style/material_popup_menu</item>
    </style>

    <!-- requestKey activity. -->

    <style name="MysplashTheme_light.Photo" parent="MysplashTheme_light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MysplashTheme_dark.Photo" parent="MysplashTheme_dark">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- user activity. -->

    <style name="MysplashTheme_light.User" parent="MysplashTheme_light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MysplashTheme_dark.User" parent="MysplashTheme_dark">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- collection activity. -->
    <style name="MysplashTheme_light.Collection" parent="MysplashTheme_light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MysplashTheme_dark.Collection" parent="MysplashTheme_dark">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- login activity. -->

    <style name="MysplashTheme_light.Login" parent="MysplashTheme_light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MysplashTheme_dark.Login" parent="MysplashTheme_dark">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- me activity. -->

    <style name="MysplashTheme_light.Me" parent="MysplashTheme_light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MysplashTheme_dark.Me" parent="MysplashTheme_dark">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- common. -->

    <style name="MysplashTheme_light.Common" parent="MysplashTheme_light">
        <item name="colorAccent">@color/colorTextContent_light</item>
        <item name="android:textColorPrimary">@color/colorTextContent_light</item>
    </style>

    <style name="MysplashTheme_dark.Common" parent="MysplashTheme_dark">
        <item name="colorAccent">@color/colorTextContent_light</item>
        <item name="android:textColorPrimary">@color/colorTextContent_light</item>
    </style>

    <!-- toolbar. -->

    <style name="MysplashToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?attr/content_color</item>
        <item name="android:textColorSecondary">?attr/content_color</item>
    </style>

    <!-- menu. -->

    <style name="MysplashPopupMenuTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">?attr/root_color</item>
        <item name="android:textColor">?attr/content_color</item>
    </style>

    <!-- Text -->

    <style name="large_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_title_text_size</item>
        <item name="android:textColor">?attr/title_color</item>
    </style>

    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">?attr/title_color</item>
    </style>

    <style name="subtitle_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">?attr/subtitle_color</item>
    </style>

    <style name="content_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">?attr/content_color</item>
    </style>

    <!-- button -->

    <style name="material_button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="material_image_button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">@dimen/little_margin</item>
        <item name="android:layout_margin">@dimen/little_margin</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- image -->

    <style name="material_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
    </style>

    <!-- popup. -->

    <style name="material_popup_menu"
        parent="@android:style/Widget.Holo.PopupMenu">
        <item name="android:popupBackground">?attr/root_color</item>
    </style>

    <!-- toast. -->

    <style name="material_toast">
        <item name="android:windowEnterAnimation">@anim/toast_in</item>
        <item name="android:windowExitAnimation">@anim/toast_out</item>
    </style>

</resources>
