<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/container_update_me_closeBtn"
            android:src="@drawable/ic_close_light"
            style="@style/material_image_button"
            tools:ignore="ContentDescription" />

        <TextView
            android:text="@string/action_edit"
            android:textStyle="bold"
            android:textSize="@dimen/large_title_text_size"
            android:textColor="?attr/content_color"
            android:layout_toRightOf="@id/container_update_me_closeBtn"
            android:layout_margin="@dimen/normal_margin"
            android:layout_centerInParent="true"
            style="@style/title_text"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/container_update_me_textContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/container_update_me_usernameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:inputType="textFilter"
                android:hint="@string/feedback_edit_username"
                android:textColorHint="?attr/subtitle_color"
                android:textColor="?attr/content_color"
                android:textSize="@dimen/content_text_size" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/container_update_me_firstNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:inputType="none"
                android:hint="@string/feedback_edit_first_name"
                android:textColorHint="?attr/subtitle_color"
                android:textColor="?attr/content_color"
                android:textSize="@dimen/content_text_size" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/container_update_me_lastNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:inputType="none"
                android:hint="@string/feedback_edit_last_name"
                android:textColorHint="?attr/subtitle_color"
                android:textColor="?attr/content_color"
                android:textSize="@dimen/content_text_size" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/container_update_me_emailTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:inputType="textEmailAddress"
                android:hint="@string/feedback_edit_email"
                android:textColorHint="?attr/subtitle_color"
                android:textColor="?attr/content_color"
                android:textSize="@dimen/content_text_size" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/container_update_me_portfolioTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:inputType="textUri"
                android:hint="@string/feedback_edit_portfolio"
                android:textColorHint="?attr/subtitle_color"
                android:textColor="?attr/content_color"
                android:textSize="@dimen/content_text_size" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/container_update_me_locationTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:inputType="text"
                android:hint="@string/feedback_edit_location"
                android:textColorHint="?attr/subtitle_color"
                android:textColor="?attr/content_color"
                android:textSize="@dimen/content_text_size" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/container_update_me_bioTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:inputType="textMultiLine"
                android:hint="@string/feedback_edit_bio"
                android:textColorHint="?attr/subtitle_color"
                android:textColor="?attr/content_color"
                android:textSize="@dimen/content_text_size" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</LinearLayout>