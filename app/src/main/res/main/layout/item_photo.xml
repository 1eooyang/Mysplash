<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_photo_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/touch_rise"
    app:cardUseCompatPadding="false"
    tools:layout_marginTop="24dp"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.wangdaye.mysplash.common.widget.FreedomImageView
            android:id="@+id/item_photo_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            tools:src="@drawable/design_about_app" />

        <TextView
            android:id="@+id/item_photo_title"
            android:textColor="?attr/root_color"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="@color/colorTextDark2nd"
            android:layout_margin="@dimen/normal_margin"
            android:layout_alignBottom="@+id/item_photo_image"
            style="@style/subtitle_text"
            tools:text="from Alfredo Wong, 2016-7-21"
            tools:ignore="RtlHardcoded" />

        <ImageButton
            android:id="@+id/item_photo_likeButton"
            android:layout_alignBottom="@+id/item_photo_image"
            android:layout_alignParentRight="true"
            style="@style/material_image_button"
            tools:src="@drawable/ic_item_heart_red"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <FrameLayout
            android:id="@+id/item_photo_transition_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_photo_image"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>