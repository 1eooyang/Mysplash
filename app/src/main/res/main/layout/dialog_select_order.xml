<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_marginTop="24dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/dialog_select_order_navigationIcon"
                android:src="@drawable/ic_close"
                style="@style/material_image_button"
                tools:ignore="ContentDescription" />

            <TextView
                android:text="@string/feedback_select_order"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/dialog_select_order_navigationIcon"
                style="@style/content_text"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/dialog_select_order_nowTxt"
        android:textStyle="bold"
        android:layout_margin="@dimen/normal_margin"
        style="@style/subtitle_text"
        android:text="now : LATEST"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:id="@+id/dialog_select_order_latest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">
        
        <ImageView
            android:id="@+id/dialog_select_order_latestIcon"
            android:src="@drawable/ic_timer"
            style="@style/material_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/dialog_select_order_latestTxt"
            android:text="LATEST"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/dialog_select_order_latestIcon"
            style="@style/subtitle_text"
            tools:ignore="HardcodedText,RtlHardcoded" />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_select_order_oldest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/dialog_select_order_oldestIcon"
            android:src="@drawable/ic_timer_off"
            style="@style/material_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/dialog_select_order_oldestTxt"
            android:text="OLDEST"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/dialog_select_order_oldestIcon"
            style="@style/subtitle_text"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_select_order_popular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/dialog_select_order_popularIcon"
            android:src="@drawable/ic_fire"
            style="@style/material_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/dialog_select_order_popularTxt"
            android:text="POPULAR"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/dialog_select_order_popularIcon"
            style="@style/subtitle_text"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_margin"
        tools:ignore="UselessLeaf" />

</LinearLayout>