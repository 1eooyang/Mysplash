<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wangdaye.mysplash">

    <application
        android:name=".Mysplash"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MysplashTheme_light"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity
            android:name=".main.view.activity.MainActivity"
            android:theme="@style/MysplashTheme_light"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".photo.view.activity.PhotoActivity"
            android:theme="@style/MysplashTheme_light.Photo"
            android:label="@string/app_name" />

        <activity
            android:name=".common.view.activity.SettingsActivity"
            android:theme="@style/MysplashTheme_light.Common"
            android:label="@string/action_settings" />

        <activity
            android:name=".common.view.activity.AboutActivity"
            android:theme="@style/MysplashTheme_light.Common"
            android:label="@string/action_about"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET"
        tools:ignore="ManifestOrder" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>